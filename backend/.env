# YouTube Clone Backend Environment Variables

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=youtube_clone

# Redis Configuration (optional - will disable caching if not available)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=100

# File Upload Configuration
MAX_FILE_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,wmv,flv,webm
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,gif

# Cache Configuration
CACHE_DEFAULT_TTL=900
CACHE_VIDEO_TTL=1800
CACHE_USER_TTL=900

# Machine Learning Configuration
ML_RECOMMENDATION_BATCH_SIZE=100
ML_SIMILARITY_THRESHOLD=0.1
ML_MAX_RECOMMENDATIONS=50